<%# add checklist to toggle the fields (display all fields?) %>

<style>
.content-container {
  width: 50%;
}

table, td, th {
  border: 1px solid black;
  border-collapse: collapse;
}

form input {
  margin: 4px 0px;
}

table {
  table-layout: fixed;
  width: 600px;
}
</style>

<%# need to replace @teams with some appropriate property defined in Dancers%>
<%
  @interests = Dancer::TOGGLABLE_INTERESTS
%>

<%= form_tag action: "update_preferences", method: :post do %>
  <div class="content-container">
    <h2><b>Toggle preferences as desired, then click Update to confirm.</b></h2>
    <table>
      <tr>
        <td>
          <b> Team Switch Form Open?</b>
        </td>
        <td>
          <%= check_box_tag "Team Switch Form_cb", 1, REDIS.get("Team Switch Form") == "true" %>
          <%= REDIS.get("Team Switch Form") %>
        </td>
      </tr>
    </table>

    <table>
      <tr>
        <td>
          <b>Dancer Table Preference</b>
        </td>
        <td>
          <b>Enabled?</b>
        </td>
      </tr>
      <% for interest in @interests %>
        <tr>
          <td>
            <%= interest %>
          </td>
          <td>
            <%# check box with name, value, checked%>
            <%= check_box_tag interest + "_cb", 1, REDIS.get(interest) == "true" %>
            <%= REDIS.get(interest) %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= submit_tag 'Update Form Preferences', data: { confirm: "All preferences have been updated" }%>
  </div>
<% end %>
